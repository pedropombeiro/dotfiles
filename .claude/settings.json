{
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-powerline-v2.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "github@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "just fix $CLAUDE_FILE_PATHS"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "just fix $CLAUDE_FILE_PATHS"
          }
        ]
      }
    ]
  }
}
