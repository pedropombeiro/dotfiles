# Inspired from https://github.com/mathiasbynens/dotfiles/blob/master/.gitconfig

[user]

  name  = Pedro Pombeiro
  email = noreply@pedro.pombei.ro

[include]

  path = ~/.config/dotfiles/git/gitconfig-specific
  path = ~/.config/dotfiles/git/colors/tomorrow-night-eighties.config

[apply]

  # Detect whitespace errors when applying a patch
  whitespace = fix

[branch]

  sort = -committerdate

[core]

  editor = nvim

  # Repaint the screen, discarding any buffered input.  Useful if the file is changing while it is being viewed.
  pager = delta

  excludesfile = ~/.config/dotfiles/git/gitignore-global

  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  # [default] trailing-space: looks for spaces at the end of a line
  # [default] space-before-tab: looks for spaces before tabs at the beginning of a line
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

  # Prevent showing files whose names contain non-ASCII symbols as unversioned.
  # http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
  precomposeunicode = false

  # Speed up commands involving untracked files such as `git status`.
  # https://git-scm.com/docs/git-update-index#_untracked_cache
  untrackedCache = true

[color]

  # Use colors in Git commands that are capable of colored output when
  # outputting to the terminal. (This is the default setting in Git ≥ 1.8.4.)
  ui = auto

[color "branch"]

  current = yellow reverse
  local   = yellow
  remote  = green

[commit]

  template = ~/.config/dotfiles/git/git_commit_msg.txt
  verbose = true

[column]

  ui = auto

[init]

  defaultBranch = main

[diff]

  # Detect copies as well as renames
  renames     = copies
  colorMoved  = default
  tool        = nvimdiff

[diff "bin"]

  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

  # Use `hexdump` to diff binary files
  textconv = hexdump -v -C

[filter "lfs"]

  clean     = git-lfs clean -- %f
  smudge    = git-lfs smudge -- %f
  process   = git-lfs filter-process
  required  = true

[help]

  # Automatically correct and execute mistyped commands
  autocorrect = 1

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features     = decorations side-by-side
  light        = false      # set to true if you're in a terminal w/ a light background color
  plus-style   = "syntax #012800"
  minus-style  = "syntax #340001"
  syntax-theme = gruvbox-dark
  navigate     = true
  hyperlinks   = true

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "side-by-side"]
  side-by-side = true
  line-numbers = true

[delta "decorations"]
  commit-decoration-style       = blue ol
  commit-style                  = raw
  file-style                    = omit
  hunk-header-decoration-style  = blue box
  hunk-header-file-style        = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style             = file line-number syntax

[difftool]

  prompt = false

[difftool "nvimdiff"]

  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]

  keepBackup = false
  tool = nvimdiff

[mergetool]

  prompt = true

[mergetool "nvimdiff"]

  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"

[pager]
  diff    = delta
  log     = delta
  reflog  = delta
  show    = delta

[push]

  # https://git-scm.com/docs/git-config#git-config-pushdefault
  default = simple
  autoSetupRemote = true

[pull]

  rebase = true

[rebase]

  autoSquash          = true
  autoStash           = true
  updateRefs          = true
  missingCommitsCheck = warn

[rerere]

  ; Reuse recorded resolutions
  ; This setting is only useful if you’re doing rebases with conflicts over and over again.
  ; It’s not the most common situation, but there is not really an issue if it’s turned on and never used.

  enabled = true
  autoupdate = true

[tag]

  sort = version:refname

# URL shorthands

[url "git@github.com:"]

  insteadOf     = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git@gitlab.com:"]

  insteadOf     = "gl:"
  pushInsteadOf = "gitlab:"
  pushInsteadOf = "git://gitlab.com/"

[url "git://github.com/"]

  insteadOf = "github:"

[url "git://gitlab.com/"]

  insteadOf = "gitlab:"

[url "git@gist.github.com:"]

  insteadOf     = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[fetch]
  parallel = 8
  prune = true
  showForcedUpdates = true
  pruneTags = true

[submodule]
  fetchJobs = 2
[status]
  submoduleSummary = true
