{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "plugin": [
    "@gitlab/opencode-gitlab-plugin",
    "@tarquinen/opencode-dcp@latest"
  ],
  "enabled_providers": ["gitlab"],
  "model": "gitlab/duo-chat-opus-4-5",
  "small_model": "gitlab/duo-chat-haiku-4-5",
  "share": "disabled",
  "snapshot": false,
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      "bundle exec *": "allow",
      "find *": "allow",
      "git add *": "allow",
      "git blame *": "allow",
      "git branch *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git ls-files *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "go build *": "allow",
      "go test *": "allow",
      "go vet *": "allow",
      "golangci-lint run *": "allow",
      "grep *": "allow",
      "ls *": "allow",
      "which *": "allow",
      "yadm add *": "allow",
      "yadm alt": "allow",
      "yadm blame *": "allow",
      "yadm branch *": "allow",
      "yadm grep *": "allow",
      "yadm config --get-all *": "allow",
      "yadm diff *": "allow",
      "yadm log *": "allow",
      "yadm ls-files *": "allow",
      "yadm show *": "allow",
      "yadm status *": "allow"
    },
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "todowrite": "allow"
  },

  "keybinds": {
    "scrollbar_toggle": "ctrl+alt+t",
    "messages_page_up": "pageup,ctrl+alt+b,home",
    "messages_page_down": "pagedown,ctrl+alt+f,end",
    "input_buffer_home": "none",
    "input_buffer_end": "none",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g"
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
