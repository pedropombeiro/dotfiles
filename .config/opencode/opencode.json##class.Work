{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "plugin": [
    "@gitlab/opencode-gitlab-plugin"
  ],
  "mcp": {
    "lazy-mcp": {
      "type": "local",
      "command": [
        "npx",
        "lazy-mcp@latest",
        "--config",
        "~/.config/lazy-mcp/servers.json"
      ],
      "enabled": true
    }
  },
  "enabled_providers": ["gitlab"],
  "small_model": "gitlab/duo-chat-haiku-4-5",
  "share": "disabled",
  "snapshot": false,
  "permission": {
    "*": "ask",
    "bash": {
      "*": "ask",
      "bundle exec rspec*": "allow",
      "bundle exec rubocop -A *": "allow",
      "date*": "allow",
      "echo*": "allow",
      "find*": "allow",
      "git add*": "allow",
      "git blame*": "allow",
      "git branch*": "allow",
      "git diff*": "allow",
      "git --no-pager diff*": "allow",
      "git grep*": "allow",
      "git log*": "allow",
      "git ls-files*": "allow",
      "git remote -v": "allow",
      "git rev-parse*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "go build*": "allow",
      "go test*": "allow",
      "go vet*": "allow",
      "golangci-lint run*": "allow",
      "grep*": "allow",
      "head*": "allow",
      "ls*": "allow",
      "markdownlint *": "allow",
      "npx markdownlint-cli2 *": "allow",
      "pre-commit *": "allow",
      "sleep *": "allow",
      "tail*": "allow",
      "vale *": "allow",
      "wc *": "allow",
      "which*": "allow",
    },
    "gh run view": "allow",
    "glob": "allow",
    "grep": "allow",
    "knowledge-graph_list_projects": "allow",
    "knowledge-graph_read_definitions": "allow",
    "knowledge-graph_search_codebase_definitions": "allow",
    "lazy-mcp_describe_commands": "allow",
    "lazy-mcp_invoke_command": "allow",
    "lazy-mcp_list_commands": "allow",
    "lazy-mcp_list_servers": "allow",
    "read": "allow",
    "task": { "explore": "allow" },
    "todowrite": "allow"
  },

  "keybinds": {
    "scrollbar_toggle": "ctrl+alt+t",
    "messages_page_up": "pageup,ctrl+alt+b,home",
    "messages_page_down": "pagedown,ctrl+alt+f,end",
    "input_buffer_home": "none",
    "input_buffer_end": "none",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g"
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
