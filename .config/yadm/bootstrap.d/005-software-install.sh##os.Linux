#!/usr/bin/env sh

if command -v debconf-set-selections >/dev/null; then
  echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections
fi

command -v sudo >/dev/null || apt-get install -y sudo
sudo apt-get install -y build-essential curl file git libssl-dev make moreutils neovim software-properties-common wget zsh

curl https://mise.jdx.dev/install.sh | sh

sudo add-apt-repository -y ppa:ipinfo/ppa
sudo apt-get update
sudo apt-get install -y ipinfo
