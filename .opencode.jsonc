{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["~/.claude/CLAUDE.md", "~/CLAUDE.md"],
  "permission": {
    "task": "allow",
    "edit": {
      ".shellrc/": "allow"
    },
    "bash": {
      "yadm add *": "allow",
      "yadm alt": "allow",
      "yadm blame *": "allow",
      "yadm branch *": "allow",
      "yadm grep *": "allow",
      "yadm config --get-all *": "allow",
      "yadm diff *": "allow",
      "yadm log *": "allow",
      "yadm ls-files *": "allow",
      "yadm show *": "allow",
      "yadm status *": "allow"
    }
  }
}
