{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "abandonments:recommended",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":configMigration",
    ":enablePreCommit",
    ":prImmediately"
  ],
  "packageRules": [
    {
      "description": "Use rebase strategy for automerging patch/pin/digest updates with strict checks",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "internalChecksFilter": "strict",
      "automergeStrategy": "rebase"
    },
    {
      "description": "Enable automerge for pre-commit package updates",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["pre-commit"],
      "automerge": true
    },
    {
      "description": "Group pre-commit hook updates",
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit hooks"
    },
    {
      "description": "Group all bootstrap tool updates together",
      "matchManagers": ["custom.regex"],
      "matchFileNames": [
        ".config/yadm/bootstrap.d/12-install-other-tools.sh##distro.qts"
      ],
      "groupName": "QTS bootstrap tools"
    }
  ],
  "mise": {
    "managerFilePatterns": [
      "/(^|/)\\.?mise\\.toml$/",
      "/(^|/)\\.?mise/config\\.toml$/",
      "/(^|/)\\.config/mise/config\\.toml##.*\\.toml$/",
      "/(^|/)\\.config/mise/config\\.toml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["bandwhich_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "imsnif/bandwhich"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["btop_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aristocratos/btop"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["croc_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "schollz/croc"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["fzf_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "junegunn/fzf"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["gping_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "orf/gping"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["lnav_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "tstack/lnav"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["nvim_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "neovim/neovim"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["procs_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "dalance/procs"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": ["yazi_version=(?<currentValue>[^\\s#]+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "sxyazi/yazi"
    }
  ]
}
