{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":configMigration",
    ":enablePreCommit",
    ":prImmediately"
  ],
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "description": "Group GitHub Actions updates weekly",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "schedule": ["before 9am on sunday"]
    },
    {
      "description": "Pin GitHub Actions to commit SHAs for security",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    },
    {
      "description": "Use rebase strategy for automerging patch/pin/digest updates with strict checks",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "internalChecksFilter": "strict",
      "automergeStrategy": "rebase"
    },
    {
      "description": "Prefix automerge updates in MR titles",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "commitMessagePrefix": "`AUTOMERGE`: "
    },
    {
      "description": "Enable automerge for pre-commit package updates",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["pre-commit"],
      "automerge": true,
      "commitMessagePrefix": "`AUTOMERGE`: "
    },
    {
      "description": "Group pre-commit hook updates",
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit hooks"
    },
    {
      "description": "Limit renovatebot/pre-commit-hooks updates to monthly",
      "matchManagers": ["pre-commit"],
      "matchPackageNames": ["renovatebot/pre-commit-hooks"],
      "schedule": ["on the first day of the month"]
    },
    {
      "description": "Limit Renovate updates to monthly",
      "matchManagers": ["mise"],
      "matchPackageNames": ["npm:renovate"],
      "schedule": ["on the first day of the month"]
    },
    {
      "description": "Delay Node.js updates by 7 days for stability",
      "matchManagers": ["mise"],
      "matchPackageNames": ["node", "nodejs"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Pin Node.js version for QTS (limited runtime support)",
      "matchManagers": ["mise"],
      "matchPackageNames": ["node", "nodejs"],
      "matchFileNames": [
        ".config/mise/config.toml##distro.qts,extension.toml",
        ".config/mise/conf.d/distro-specific.toml##os.Linux,distro.qts"
      ],
      "allowedVersions": "23.7.x"
    },
    {
      "description": "Group mise github/aqua backend tools",
      "matchManagers": ["custom.regex", "mise"],
      "matchFileNames": [
        ".config/mise/config.toml**",
        ".config/mise/conf.d/**"
      ],
      "groupName": "mise backend tools"
    },
    {
      "description": "Group shared dua updates",
      "matchManagers": ["mise"],
      "matchPackageNames": ["/dua/"],
      "groupName": "mise shared dua"
    },
    {
      "description": "Group opencode updates",
      "matchManagers": ["custom.regex", "mise"],
      "matchPackageNames": ["/opencode/"],
      "groupName": "mise shared opencode"
    },
    {
      "description": "Group shared npm:renovate updates across all mise configs (last to ensure it overrides other groups)",
      "matchManagers": ["mise"],
      "matchPackageNames": ["/npm:renovate/"],
      "groupName": "mise shared npm:renovate",
      "groupSlug": "mise-shared-npm-renovate"
    }
  ],
  "mise": {
    "managerFilePatterns": [
      "/(^|/)\\.?mise\\.toml$/",
      "/(^|/)\\.?mise/config\\.toml$/",
      "/(^|/)\\.config/mise/config\\.toml##[^/]+$/",
      "/(^|/)\\.config/mise/config\\.toml$/",
      "/(^|/)\\.config/mise/conf\\.d/[^/]+\\.toml##[^/]+$/"
    ]
  },
  "customManagers": [
    {
      "description": "mise github/aqua backend packages",
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)\\.config/mise/config\\.toml##[^/]+$/",
        "/(^|/)\\.config/mise/config\\.toml$/",
        "/(^|/)\\.config/mise/config\\.local\\.toml$/",
        "/(^|/)\\.config/mise/conf\\.d/[^/]+\\.toml##[^/]+$/"
      ],
      "matchStrings": [
        "\"github:(?<depName>[^\"\\[]+)(\\[[^\\]]*\\])?\"\\s*=\\s*\"(?<currentValue>[^\"]+)\"",
        "\"aqua:(?<depName>[^\"\\[]+)(\\[[^\\]]*\\])?\"\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "loose"
    },
    {
      "description": "mise opencode inline-table package (aqua backend)",
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)\\.config/mise/config\\.toml##[^/]+$/",
        "/(^|/)\\.config/mise/config\\.toml$/",
        "/(^|/)\\.config/mise/config\\.local\\.toml$/",
        "/(^|/)\\.config/mise/conf\\.d/[^/]+\\.toml##[^/]+$/"
      ],
      "matchStrings": [
        "\"opencode\"\\s*=\\s*\\{[^}]*version\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*\\}"
      ],
      "depNameTemplate": "sst/opencode",
      "datasourceTemplate": "aqua",
      "versioningTemplate": "loose"
    }
  ]
}
