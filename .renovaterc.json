{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "abandonments:recommended",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":configMigration",
    ":enablePreCommit",
    ":prImmediately"
  ],
  "packageRules": [
    {
      "description": "Group GitHub Actions updates weekly",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "schedule": ["before 9am on sunday"]
    },
    {
      "description": "Pin GitHub Actions to commit SHAs for security",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    },
    {
      "description": "Use rebase strategy for automerging patch/pin/digest updates with strict checks",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "internalChecksFilter": "strict",
      "automergeStrategy": "rebase"
    },
    {
      "description": "Enable automerge for pre-commit package updates",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["pre-commit"],
      "automerge": true
    },
    {
      "description": "Group pre-commit hook updates",
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit hooks"
    },
    {
      "description": "Limit renovatebot/pre-commit-hooks updates to monthly",
      "matchManagers": ["pre-commit"],
      "matchPackageNames": ["renovatebot/pre-commit-hooks"],
      "schedule": ["on the first day of the month"]
    },
    {
      "description": "Delay Node.js updates by 7 days for stability",
      "matchManagers": ["mise"],
      "matchPackageNames": ["nodejs"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Disable automerge for cargo packages in QTS mise config",
      "matchManagers": ["cargo"],
      "matchFileNames": [".config/mise/config.toml##distro.qts,extension.toml"],
      "automerge": false
    },
    {
      "description": "Group all bootstrap tool updates together",
      "matchManagers": ["custom.regex"],
      "matchFileNames": [
        ".config/yadm/bootstrap.d/12-install-other-tools.sh##distro.qts"
      ],
      "groupName": "QTS bootstrap tools",
      "commitMessagePrefix": "chore(qts):",
      "commitMessageTopic": "bootstrap tools",
      "commitMessageExtra": ""
    }
  ],
  "mise": {
    "managerFilePatterns": [
      "/(^|/)\\.?mise\\.toml$/",
      "/(^|/)\\.?mise/config\\.toml$/",
      "/(^|/)\\.config/mise/config\\.toml##.*\\.toml$/",
      "/(^|/)\\.config/mise/config\\.toml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.config/yadm/bootstrap\\.d/12-install-other-tools\\.sh##distro\\.qts$/"
      ],
      "matchStrings": [
        "\\w+_version=(?<currentValue>[^\\s#]+)\\s*#\\s*(?<depName>\\S+/\\S+)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
